<div>
    <h1 class="title">Carrito de compras</h1>
    <div class="carts">
        {{#each products}}
        <div class="cardCart">
            <div class="imageCart">
                <img src="{{product.thumbnail}}" alt="{{product.title}}">
            </div>
            <div class="infoCart">
                <h3>{{product.title}}</h3>
                <p>{{product.description}}</p>
                <p>${{product.price}}</p>
                <p>Cantidad en el carrito: {{this.quantity}}</p>
            </div>
        </div>
        {{/each}}
    </div>
</div>

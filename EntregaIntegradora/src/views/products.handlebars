<div class="navbar">
  <a href="/login" id="logout">Logout</a>
</div>
<div class="products-container">
<h1 class="title">Productos</h1>
    <div class="products">
        {{#each products}}
        <div class="cardProduct">
            <div class="imageProduct">
                <img src="{{this.thumbnail}}" alt="{{this.title}}">
            </div>
            <div class="infoProduct">
                <h3>{{this.title}}</h3>
                <p>{{this.description}}</p>
                <p>${{this.price}}</p>
                <p>{{this.code}}</p>
                <p>{{this.stock}}</p>
            </div>
            <button id="addProductToCart">Agregar al carrito</button>
        </div>
        {{/each}}
    </div>
</div>
        <div class="pagination-buttons">
            {{#if hasPrevPage}}
                <a class="left" href="/products?page={{prevPage}}"><button>Anterior</button></a>
            {{/if}}
            {{#if hasNextPage}}
                <a class="right" href="/products?page={{nextPage}}"><button>Siguiente</button></a>
            {{/if}}
        </div>
<script src="/js/products.js"></script>
